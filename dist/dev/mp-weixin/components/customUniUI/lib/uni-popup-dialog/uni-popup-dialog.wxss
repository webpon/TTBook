.uni-popup-dialog {
  width: 600rpx;
  border-radius: 22rpx;
  background-color: #fff;
}
.uni-dialog-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 50rpx;
}
.uni-dialog-title-text {
  font-size: 32rpx;
  font-weight: 500;
}
.uni-dialog-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}
.uni-dialog-content-text {
  font-size: 28rpx;
  color: #6C6C6C;
}
.uni-dialog-button-group {
  display: flex;
  flex-direction: row;
  border-top-color: #f5f5f5;
  border-top-style: solid;
  border-top-width: 2rpx;
}
.uni-dialog-button {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 90rpx;
}
.uni-border-left {
  border-left-color: #f0f0f0;
  border-left-style: solid;
  border-left-width: 2rpx;
}
.uni-dialog-button-text {
  font-size: 32rpx;
  color: #333;
}
.uni-button-color {
  color: #007aff;
}
.uni-dialog-input {
  flex: 1;
  font-size: 28rpx;
  border: 2rpx #eee solid;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  color: #555;
}
.uni-popup__success {
  color: #4cd964;
}
.uni-popup__warn {
  color: #f0ad4e;
}
.uni-popup__error {
  color: #dd524d;
}
.uni-popup__info {
  color: #909399;
}